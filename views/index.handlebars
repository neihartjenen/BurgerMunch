<div class="container">
  <h1 id="title">Burger App</h1>
  <div class="row">
    <div class="col-lg-4">
      <ol>
        {{#each burgers}}
        {{#unless this.devoured}}
        <li>
          {{this.burger_name}}
          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit" class="btn btn-success">Devour it!</button>
          </form>
        </li>
        {{/unless}}
        {{/each}}
      </ol>
    </div>
    <div class="text-center col-lg-4">
      <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
          <textarea class="form-control" type="text" id="bu" name="burger_name"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <p><strong>Eat Da Burger!!</strong></p>
      </form>
    </div>

    <div class="col-lg-4">
      <H4 id="right-column">Devoured Burgers</H4>
      <ol>
        {{#each burgers}}
        {{#if this.devoured}}
        <li>
          {{this.burger_name}}
          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="false">
          </form>
        </li>
        {{/if}}
        {{/each}}
      </ol>
    </div>


  </div>
</div>
</div>
</div>